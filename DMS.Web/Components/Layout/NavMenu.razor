    bool EnableCollapsedChildNavigation = true;
}
<div class="top-row ps-1" style="background-color:#f7f7f7">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TechSolutions</a>
    </div>
</div>
<nav>
<FluentStack Orientation="Orientation.Horizontal" Width="100%"  >
    <div>
        <FluentNavMenu @bind-Expanded="@Expanded" Width="250" Collapsible="true" CollapsedChildNavigation="@EnableCollapsedChildNavigation" >
