                    <FluentNavLink Icon="@(new Icons.Regular.Size24.PersonInfo())" Href="https://microsoft.com" Tooltip="Results">Your results</FluentNavLink>
                </FluentNavGroup>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Settings())" Href="https://microsoft.com" Tooltip="Item 6 tooltip"  Style="vertical-align:bottom">Settings</FluentNavLink>
